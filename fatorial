while True:
    n = input("digite um numero:")

    if not n.isdigit():
      print("voce deve digitar somente numeros inteiros")
    else:
          n = int(n)
          if n < 0:
              print("o numero é negativo")
          else:
             fatorial =1
             for i in range(1, n+1):
                 fatorial += i
             print(f"o fatorial de {n} é {fatorial}")
